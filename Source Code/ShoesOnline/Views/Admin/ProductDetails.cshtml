@model ShoesOnline.Models.sanPham
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Products</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>
                    <div class="col-12">
                        <img src="@Url.Content(Model.hinhDD)" class="product-image" alt="Product Image"/>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <h3 class="my-3">@Html.DisplayFor(model => model.tenSP)</h3>
                    <h3 class="my-3">Mã sản phẩm: @Html.DisplayFor(model => model.maSP)</h3>
                    <p>@Html.DisplayFor(model => model.noiDung)</p>

                    <hr>
                    <h4 class="mt-3">Ngày đăng: <small>@String.Format("{0:dd/MM/yyyy}", Model.ngayDang)</small></h4>
                    <h4 class="mt-3">Loại sản phẩm: <small>@Html.DisplayFor(model => model.loaiSP.loaiHang)</small></h4>
                    <h4 class="mt-3">Đơn vị tính: <small>@Html.DisplayFor(model => model.dvt)</small></h4>
                    <h4 class="mt-3">Giới tính: <small>@Html.DisplayFor(model => model.gioiTinh)</small></h4>
                    <div class="bg-gray py-2 px-3 mt-4">
                        <h2 class="mb-0">
                            @String.Format("{0:0,0}", Model.giaBan) VNĐ
                        </h2>
                        <h4 class="mt-0">
                            <small>@Html.DisplayFor(model => model.giamGia)</small>
                        </h4>
                    </div>
                    <div class="mt-4">
                        <div class="btn btn-default btn-lg btn-flat">
                            <i class="fas fa-tools fa-lg mr-2"></i>
                            @Html.ActionLink("Sửa", "EditProduct", new { id = Model.maSP })
                        </div>

                        <div class="btn btn-default btn-lg btn-flat">
                            <i class="fas fa-heart fa-lg mr-2"></i>
                            @Html.ActionLink("Back to List", "Products")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

